<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@color/charcoal_grey" />
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="270" android:endColor="@color/light_gray" android:startColor="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false" android:drawable="@android:color/white" />
    <item android:drawable="@android:color/white" />
</selector>
