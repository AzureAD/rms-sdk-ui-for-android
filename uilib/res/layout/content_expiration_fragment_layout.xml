<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_expiration_container"
    style="@android:style/Theme.NoTitleBar.Fullscreen"
    android:background="@color/light_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/content_expiration_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/dark_black"
        android:gravity="center"
        android:minHeight="20dp"
        android:text="@string/content_expires"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

        <FrameLayout
        android:id="@+id/content_expiration_list_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_expiration_header"/> 
    
</RelativeLayout>
